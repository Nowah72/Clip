<Window x:Class="ClipboardManagerCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clip - Clipboard Manager"
        Height="600" Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Ultra Dark Color Brushes -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#111111"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="CardHover" Color="#222222"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#A855F7"/>
        <SolidColorBrush x:Key="AccentCyan" Color="#06B6D4"/>
        <SolidColorBrush x:Key="AccentPink" Color="#EC4899"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E5E5E5"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#888888"/>
        <SolidColorBrush x:Key="TextTertiary" Color="#555555"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="DangerRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#FCD34D"/>

        <!-- Logo Gradient -->
        <LinearGradientBrush x:Key="LogoGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#A855F7" Offset="0"/>
            <GradientStop Color="#EC4899" Offset="1"/>
        </LinearGradientBrush>


        <!-- Primary Button Gradient -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#A855F7" Offset="0"/>
            <GradientStop Color="#EC4899" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource CardHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Custom Auto-Hide Scrollbar Style -->
        <Style x:Key="SubtleScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="Transparent" Width="20"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True" Width="6" HorizontalAlignment="Right">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#5A5A5A"
                                                        CornerRadius="3"
                                                        Opacity="0.7"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                           To="1"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                           To="0"
                                                           Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom ScrollViewer Style -->
        <Style x:Key="AutoHideScrollViewer" TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                     Grid.Column="1"
                                     Style="{StaticResource SubtleScrollBar}"
                                     Value="{TemplateBinding VerticalOffset}"
                                     Maximum="{TemplateBinding ScrollableHeight}"
                                     ViewportSize="{TemplateBinding ViewportHeight}"
                                     Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tab Control Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border x:Name="Border"
        Background="{DynamicResource SecondaryBackground}"
        CornerRadius="12"
        Margin="0,0,12,0"
        Padding="40,14"/>

<Border x:Name="GradientBorder"
        CornerRadius="12"
        Margin="0,0,12,0"
        Padding="40,14"
        Visibility="Collapsed">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#A855F7" Offset="0"/>
                                        <GradientStop Color="#EC4899" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <ContentPresenter x:Name="ContentSite"
                                            ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="GradientBorder" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Window Border -->
        <Border x:Name="MainBorder"
                Background="{DynamicResource PrimaryBackground}"
                CornerRadius="20"
                BorderThickness="1"
                BorderBrush="{DynamicResource BorderBrush}"
                ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="40" Opacity="0.8" ShadowDepth="0"/>
            </Border.Effect>

            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo and Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Background="{StaticResource LogoGradient}"
                                Width="44" Height="44"
                                CornerRadius="12"
                                Margin="0,0,14,0"
                                Padding="8">
                            <Viewbox Stretch="Uniform">
                                <Canvas Width="24" Height="24">
                                    <!-- Modern Clipboard Icon -->
                                    <!-- Clipboard body -->
                                    <Path Data="M7 5 L7 19 C7 20.1 7.9 21 9 21 L17 21 C18.1 21 19 20.1 19 19 L19 7 C19 5.9 18.1 5 17 5 L16 5"
                                          Stroke="White"
                                          StrokeThickness="1.8"
                                          StrokeLineJoin="Round"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"/>
                                    <!-- Clipboard clip/header -->
                                    <Path Data="M9 3 C9 2.5 9.5 2 10 2 L14 2 C14.5 2 15 2.5 15 3 L15 5 C15 5.5 14.5 6 14 6 L10 6 C9.5 6 9 5.5 9 5 Z"
                                          Fill="White"/>
                                    <!-- Checkmark -->
                                    <Path Data="M10 13 L11.5 14.5 L14 11"
                                          Stroke="White"
                                          StrokeThickness="1.5"
                                          StrokeLineJoin="Round"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"/>
                                </Canvas>
                            </Viewbox>
                        </Border>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Clip"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Clipboard Manager"
                                       FontSize="11"
                                       Foreground="{StaticResource TextTertiary}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Settings Button -->
                    <Button x:Name="SettingsButton"
                            Grid.Column="2"
                            Style="{StaticResource IconButton}"
                            Margin="0,0,8,0"
                            Click="SettingsButton_Click">
                        <Viewbox Width="16" Height="16">
                            <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" TextAlignment="Center"/>
                        </Viewbox>
                    </Button>

                    <!-- Snip Button -->
                    <Button x:Name="SnipButton"
                            Grid.Column="3"
                            Style="{StaticResource IconButton}"
                            Margin="0,0,8,0"
                            Click="SnipButton_Click">
                        <Viewbox Width="16" Height="16">
                            <TextBlock Text="&#xE7C6;" FontFamily="Segoe MDL2 Assets" TextAlignment="Center"/>
                        </Viewbox>
                    </Button>

                    <!-- Delete Mode Button -->
                    <Button x:Name="DeleteModeButton"
                            Grid.Column="4"
                            Style="{StaticResource IconButton}"
                            Margin="0,0,8,0"
                            Click="DeleteModeButton_Click">
                        <Viewbox Width="16" Height="16">
                            <TextBlock x:Name="DeleteModeIcon" Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" TextAlignment="Center"/>
                        </Viewbox>
                    </Button>

                    <!-- Close Button -->
                    <Button x:Name="CloseButton"
                            Grid.Column="5"
                            Style="{StaticResource IconButton}"
                            Click="CloseButton_Click">
                        <Viewbox Width="16" Height="16">
                            <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontWeight="Bold" TextAlignment="Center" Foreground="#888888"/>
                        </Viewbox>
                    </Button>
                </Grid>

                <!-- Search Box -->
                <Border Grid.Row="1"
                        Background="{DynamicResource SecondaryBackground}"
                        CornerRadius="10"
                        Margin="0,0,0,10"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="&#xE721;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   Margin="12,0,6,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextTertiary}"/>

                        <TextBox x:Name="SearchBox"
                                 Grid.Column="1"
                                 Background="Transparent"
                                 Foreground="{StaticResource TextPrimary}"
                                 CaretBrush="#555555"
                                 BorderThickness="0"
                                 Padding="5,9"
                                 FontSize="13"
                                 VerticalAlignment="Center"
                                 TextChanged="SearchBox_TextChanged">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Add Item Button -->
                <Button x:Name="AddItemButton"
                        Grid.Row="2"
                        Height="42"
                        FontWeight="SemiBold"
                        FontSize="14"
                        Margin="0,0,0,10"
                        Background="{StaticResource PrimaryGradient}"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="AddItemButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Add Item" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Tabs -->
                <TabControl x:Name="MainTabControl"
                            Grid.Row="3"
                            SelectionChanged="MainTabControl_SelectionChanged">
                    <TabItem x:Name="TextTab">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="15" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TextTabLabel" Text="Text" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        <ScrollViewer Style="{StaticResource AutoHideScrollViewer}">
                            <ItemsControl x:Name="TextItemsControl" Margin="0,10,0,0"/>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem x:Name="ImagesTab">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="&#xE91B;" FontFamily="Segoe MDL2 Assets" FontSize="15" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="ImagesTabLabel" Text="Images" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        <ScrollViewer Style="{StaticResource AutoHideScrollViewer}">
                            <ItemsControl x:Name="ImagesItemsControl" Margin="0,10,0,0"/>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem x:Name="StarredTab">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="&#xE735;" FontFamily="Segoe MDL2 Assets" FontSize="15" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="StarredTabLabel" Text="Starred" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        <ScrollViewer Style="{StaticResource AutoHideScrollViewer}">
                            <ItemsControl x:Name="StarredItemsControl" Margin="0,10,0,0"/>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem x:Name="GroupsTab">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="15" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="GroupsTabLabel" Text="Groups" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Groups list -->
                            <ScrollViewer Grid.Row="0" Style="{StaticResource AutoHideScrollViewer}">
                                <ItemsControl x:Name="GroupsItemsControl" Margin="0,10,0,0"/>
                            </ScrollViewer>

                            <!-- Click-anywhere overlay (shown only when there are no groups) -->
                            <Border x:Name="GroupsCreateOverlay"
                                    Grid.Row="0"
                                    Background="Transparent"
                                    Visibility="Collapsed"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="GroupsCreateOverlay_MouseLeftButtonDown">
                                <Grid>
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <!-- Big circular plus -->
                                        <Border Width="88"
        Height="88"
        CornerRadius="44"
        Padding="18"
        Background="Transparent"
        BorderThickness="1"
        BorderBrush="#2F2F2F">

    <Viewbox Stretch="Uniform">
        <TextBlock Text="&#xE710;"
                   FontFamily="Segoe MDL2 Assets"
                   FontWeight="ExtraLight"
                   FontSize="28"
                   Foreground="#6B7280"/>
    </Viewbox>

</Border>

                                        <TextBlock Text="Create a new group"
                                                   Margin="0,16,0,0"
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Click anywhere to start"
                                                   Margin="0,6,0,0"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextTertiary}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>
                </TabControl>

                <!-- Notification Area -->
                <Grid Grid.Row="4" Margin="0,10,0,0">
                    <!-- Copy Notification -->
                    <Border x:Name="CopyNotification"
                            Background="{StaticResource SuccessGreen}"
                            CornerRadius="10"
                            Padding="14,8"
                            Visibility="Collapsed"
                            HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontWeight="Bold" FontSize="13" Margin="0,0,6,0"/>
                            <TextBlock Text="Copied!" Foreground="White" FontWeight="Bold" FontSize="13"/>
                        </StackPanel>
                    </Border>

                    <!-- Delete Mode Banner -->
                    <Border x:Name="DeleteBanner"
                            Background="{DynamicResource CardBackground}"
                            BorderBrush="{StaticResource DangerRed}"
                            BorderThickness="2"
                            CornerRadius="10"
                            Padding="12,10"
                            Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="DeleteCounterLabel"
                                       Grid.Column="0"
                                       Text="0 items selected"
                                       Foreground="#FF6B6B"
                                       FontWeight="Bold"
                                       FontSize="13"
                                       VerticalAlignment="Center"/>

                            <Button x:Name="DeleteSelectedButton"
                                    Grid.Column="1"
                                    Background="{StaticResource DangerRed}"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    FontSize="13"
                                    Padding="14,6"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="DeleteSelectedButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="13" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Delete" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Footer -->
                <Grid Grid.Row="5" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Grid.ColumnSpan="2" Height="1" Background="{DynamicResource CardBackground}" Margin="0,0,0,8" VerticalAlignment="Top"/>

                    <TextBlock x:Name="FooterLabel"
                               Grid.Column="0"
                               Text="0 items stored"
                               Foreground="{StaticResource TextTertiary}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <TextBlock x:Name="DeleteAllButton"
                               Grid.Column="1"
                               Text="Delete all"
                               Foreground="#5A3030"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Cursor="Hand"
                               MouseLeftButtonDown="DeleteAllButton_Click">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#8B4545"/>
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>

        <!-- Overlay for modals -->
        <Border x:Name="OverlayBackground"
                Background="#DD000000"
                Visibility="Collapsed"
                CornerRadius="20"
                MouseLeftButtonDown="CloseOverlay_Click">
            <Border.Effect>
                <BlurEffect Radius="0"/>
            </Border.Effect>
        </Border>

        <!-- Modal Container -->
        <Grid x:Name="ModalContainer"
              Visibility="Collapsed"
              IsVisibleChanged="ModalContainer_IsVisibleChanged">
        </Grid>

        <!-- Animation Container -->
        <Canvas x:Name="AnimationCanvas"
                IsHitTestVisible="False"
                ClipToBounds="False"/>
    </Grid>
</Window>
